<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".BmiActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/textLength"
        android:id="@+id/textLength"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/editLength"
        android:layout_alignStart="@+id/editLength"
        android:layout_marginTop="49dp"
        android:layout_alignParentLeft="true"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:ems="3"
        android:id="@+id/editLength"
        android:layout_below="@+id/textLength"
        android:layout_centerHorizontal="true"
        android:maxLength="3"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/textWeight"
        android:id="@+id/textWeight"
        android:layout_below="@+id/editLength"
        android:layout_alignLeft="@+id/editLength"
        android:layout_alignStart="@+id/editLength"
        android:layout_marginTop="35dp"
        android:layout_alignParentLeft="true"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:ems="3"
        android:id="@+id/editWeight"
        android:layout_below="@+id/textWeight"
        android:layout_centerHorizontal="true"
        android:maxLength="3"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/textIndex"
        android:id="@+id/textIndex"
        android:layout_below="@+id/editWeight"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp"
        android:textSize="40dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/buttonCompute"
        android:id="@+id/buttonCompute"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/textIndex"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/buttonReset"
        android:id="@+id/buttonReset"
        android:layout_below="@+id/buttonCompute"
        android:layout_alignLeft="@+id/buttonCompute"
        android:layout_alignStart="@+id/buttonCompute"
        android:layout_marginTop="22dp" />

</RelativeLayout>
